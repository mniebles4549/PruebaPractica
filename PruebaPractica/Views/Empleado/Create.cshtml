@model PruebaPractica.Core.Empleado

@{
    ViewData["Title"] = "Create";
    IEnumerable<PruebaPractica.Core.ListEstado> listEstadoCivil = ViewBag.listEstadoCivil;
}

<h1>Create</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label"></label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idtipodocumento" class="control-label"></label>
                <select asp-for="Idtipodocumento" class="form-control" asp-items="ViewBag.Idtipodocumento"></select>
            </div>
           
            <div class="form-group">
                <label asp-for="Fechanacimiento" class="control-label"></label>
                <input asp-for="Fechanacimiento" class="form-control" />
                <span asp-validation-for="Fechanacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valoraganar" class="control-label"></label>
                <input asp-for="Valoraganar" class="form-control" />
                <span asp-validation-for="Valoraganar" class="text-danger"></span>
            </div>
            <table class="table table-bordered" id="example" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Selecione Estado Civil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in listEstadoCivil)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NameEstado)
                            </td>
                            <td>
                                <div class="form-check">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        <input class="form-check-input" type="checkbox" name="IdEstadoCivil" value="@item.IdEstado">
                                        <i class="fas fa-envelope-square"></i>
                                    </label>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <input type="submit" value="Guardar Empleado" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
